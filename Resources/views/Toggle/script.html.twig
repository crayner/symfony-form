<!-- Toggle Script -->
<script>
$('[data-toggle="buttons"]').on('click', function () {
    // toggle style
    var swap = $(this).attr('toggle_swap');
    $(this).toggleClass(swap);

    // toggle input
    var $chk = $(this).find('[type=hidden]');
    var $val = $chk.val();

    if ($val === "1")
        $val = "0";
    else
        $val = "1";

    $chk.val($val);

    return false;
});
</script>